<%- include('layout', { body: `
  <h1>Blog Posts</h1>
  <a href="/new-post">Create a New Post</a>
  <ul>
    ${posts.map((post, index) => `
      <li>
        <span>${post.title}</span>
        <div>
          <a href="/edit-post/${index}">Edit</a>
          <form action="/delete-post/${index}" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </div>
      </li>
    `).join('')}
  </ul>
` }) %>
